<form>
  <div class="row">
    <div class="large-offset-4 large-4 columns end">
      <label>
        Name:
        {{input type="text" value=item.name class="form-control" placeholder="Name your conlang" required=true}}
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-offset-4 large-4 columns end">
      <label>
        Description:
        {{textarea value=item.description rows=6 placeholder="Any notes you want to make about the language!"}}
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-offset-5 large-4 columns end">
      <button type="submit" disabled={{unless item.isValid true}} class="button" {{action 'buttonClicked' item}}>{{buttonLabel}}</button>
    </div>
  </div>
</form>
