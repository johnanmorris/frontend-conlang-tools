<h2>{{model.name}}</h2>
<p>
  <strong>Description:</strong>
  {{#if model.description}}
     {{model.description}}
  {{else}}
    None
  {{/if}}
</p>

<p>
  <strong>Consonants:</strong>
  {{#if model.consonants}}
  <span class="phonemes">
    {{#each model.consonants as |consonant|}}
      {{consonant.ipa}}
  {{/each}}
  </span>
  {{else}}
    None yet
  {{/if}}
</p>

<p>
  <strong>Vowels:</strong>
  {{#if model.vowels}}
  <span class="phonemes">
    {{#each model.vowels as |vowel|}}
      {{vowel.ipa}}
    {{/each}}
  </span>
  {{else}}
    None yet
  {{/if}}
</p>

<section class="row">
  <section class="button-group small-offset-3 small-7 large-offset-3 large-7 columns">
    {{#link-to 'language.words.new' model.id class="secondary button"}}Add/Edit Words{{/link-to}}
    {{#link-to 'languages.edit' model.id class="warning button"}}Add/Edit Phonemes{{/link-to}}
    {{#link-to 'languages.index' class="button"}}All Languages{{/link-to}}
  </section>
</section>
