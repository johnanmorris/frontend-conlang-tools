<form>
  <div class="row">
    <div class="large-offset-4 large-4 columns end">
      <label>
        Name:
        {{input type="text" value=model.name placeholder="Name your conlang" required=true}}
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-offset-4 large-4 columns end">
      <label>
        Description:
        {{textarea value=model.description rows=6 placeholder="Any notes you want to make about the language!"}}
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-offset-5 large-4 columns end">
      <button type="submit" class="button" {{action 'saveLanguage' model}}>Save Changes</button>
    </div>
  </div>
</form>

{{outlet}}
