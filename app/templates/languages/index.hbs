<h2>Your Languages</h2>
<article class="row small-up-1 medium-up-3 large-up-6">
  {{#each model as |language|}}
  <section class="column">
    <p>
      <div class="lang-name">{{#link-to 'language' language}}{{language.name}}{{/link-to}}</div>
      <section class="small stacked button-group">
        {{#link-to 'languages.edit' language class="secondary button"}}edit phonemes{{/link-to}}
        {{#link-to 'language.words.new' language class="button"}}edit words{{/link-to}}
        <button class="alert button" {{action 'deleteLanguage' language}}>delete</button>
      </section>

    </p>
  </section>
  {{/each}}
</article>

{{outlet}}

<section class="row">
  <p class="small-offset-3 small-7 medium-offset-4 medium-8 large-offset-4 large-7 columns">
    {{#link-to 'languages.new' class='button'}}Add New Language{{/link-to}}
  </p>
</section>
