<h2>{{model.name}}</h2>
<p>
  <strong>Description:</strong>
  {{#if model.description}}
     {{model.description}}
  {{else}}
    None
  {{/if}}
</p>

<!-- <p>
  <strong>PHONEME IDS: {{model.phonemeIds}}</strong>
</p> -->

<p><strong>Phonemes:</strong>
{{#if model.phonemes}}
  <span class="phonemes">
  {{#each model.phonemes as |phoneme|}}
    {{phoneme.ipa}}
  {{/each}}
  </span>
{{else}}
  None yet
{{/if}}
</p>

{{phoneme-tables}}

<section class="row">
  <p class="large-offset-5 large-7 columns">
    {{#link-to 'languages.index' class='button'}}List All Languages{{/link-to}}
  </p>
</section>

{{outlet}}
